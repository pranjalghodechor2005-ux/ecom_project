
<%- include('navbar.ejs') %>

<div class="container bg-white p-4 rounded">
    <h3>Manage Category</h3>
    
    <form action="/admin/save_category" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label>Category Name</label>
                    <input type="text" name="category_name" placeholder="Enter category name" class="form-control" required>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="form-group">
                    <label>Category Image</label>
                    <input type="file" name="category_image" class="form-control" accept="image/*" required>
                    <small class="form-text text-muted">Upload an image for this category</small>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="form-group">
                    <label>Category Status</label>
                    <select name="category_status" class="form-control" required>
                        <option value="">Select Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
            </div>
            
            <div class="col-md-2">
                <div class="form-group">
                    <label>&nbsp;</label>
                    <button type="submit" class="btn btn-primary btn-block">Save Category</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="container bg-white p-4 shadow-sm mt-4">
    <div class="row">
        <div class="col-md-12">
            <h4>Category List</h4>
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Category Name</th>
                        <th>Category Image</th>
                        <th>Category Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                <% for(var i=0; i<categories.length; i++){ %>
               
                <tr>
                <td><%- categories[i].category_id %></td>
                <td><%- categories[i].category_name %></td>
                <td>
                    <% if(categories[i].category_image && categories[i].category_image !== 'null') { %>
                        <img src="/uploads/<%- categories[i].category_image %>" alt="Category Image" width="100px" height="100px" style="object-fit: cover; border: 1px solid #ddd; border-radius: 5px;" onerror="this.src='data:image/svg+xml;base64,';">
                    <% } else { %>
                        <div style="width: 100px; height: 100px; background-color: #f8f9fa; border: 1px solid #ddd; border-radius: 5px; display: flex; align-items: center; justify-content: center; color: #6c757d; font-size: 12px;">
                            No Image
                        </div>
                    <% } %>
                </td>
                <td><%- categories[i].category_status %></td>
                <td>
                    <a href="/admin/edit_category/<%- categories[i].category_id %>" class="btn btn-primary btn-sm" title="Edit">
                        <i class="fa fa-edit"></i> Edit
                    </a>
                    <a href="/admin/delete_category/<%- categories[i].category_id %>" class="btn btn-danger btn-sm ml-1" title="Delete" onclick="return confirm('Are you sure you want to delete this category?')">
                        <i class="fa fa-trash"></i> Delete
                    </a>
                </td>
                </tr>
            <% } %>
            </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('footer.ejs') %>
