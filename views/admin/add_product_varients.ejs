<%- include('navbar.ejs') %>
<div class="container bg-white p-4 shadow-sm">
    <div class="row mb-3">
        <div class="col-md-12">
            <h3 class="mb-0">Product Variants for: <span class="text-primary"><%= product[0].product_name %></span></h3>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">Add New Variant</h5>
        </div>
        <form action="/admin/save_product_varients" method="POST">
            <input type="hidden" name="product_id" value="<%= product[0].product_id %>">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Variation Title</label>
                        <input type="text" name="variation_title" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Market Price</label>
                        <input type="number" name="variation_market_price" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Variation Price</label>
                        <input type="number" name="variation_price" class="form-control" required>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Available Stock</label>
                        <input type="number" name="available_stock" class="form-control" required>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-white text-center">
                <button type="submit" class="btn btn-success">Add Variant</button>
                <a href="/admin/products_list" class="btn btn-outline-secondary">Back to Products</a>
            </div>
        </form>
    </div>

    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">Existing Variants</h5>
        </div>
        <div class="card-body p-0">
            <% if (product_variations && product_variations.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Market Price</th>
                            <th>Price</th>
                            <th>Available Stock</th>
                            <th style="width: 160px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<product_variations.length; i++) { %>
                        <tr>
                            <td><%= product_variations[i].variation_title %></td>
                            <td><%= product_variations[i].variation_market_price %></td>
                            <td><%= product_variations[i].variation_price %></td>
                            <td><%= product_variations[i].available_stock %></td>
                            <td>
                                <a href="/admin/edit_product_variation/<%= product_variations[i].variation_id %>" class="btn btn-primary btn-sm me-1">Edit</a>
                                <a href="/admin/delete_product_variation/<%= product_variations[i].variation_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this variant?');">Delete</a>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
            <div class="alert alert-info m-3">No variants added yet for this product.</div>
            <% } %>
        </div>
    </div>
</div>
