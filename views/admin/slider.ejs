<%- include('navbar.ejs') %>

<form action="/admin/save_slider" method="POST" enctype="multipart/form-data">
    <div class="container py-4">
       <div class="row justify-content-center">
           <div class="col-lg-10">
               <h1>Slider</h1>
           </div>
           <div  class="col-md-6 mt-3">
               Slider Image
               <input type="file" name="slider_image" class="form-control" required>
           </div>
           <div class="col-md-6 mt-3">
               Slider Title
               <input type="text" name="slider_title" class="form-control" required>
           </div>  
           <div class="col-md-6 mt-3">
               Slider Description
               <textarea name="slider_description" class="form-control" required></textarea>
           </div>
           <div class="col-md-6 mt-3">
               Slider Button Text
               <input type="text" name="slider_button_text" class="form-control" required>
           </div>
           <div class="col-md-6 mt-3">
               Slider Button Link
               <input type="text" name="slider_button_link" class="form-control" required><br>
           </div>
           
           <div class="col-md-12 text-center">
               <button type="submit" class="btn btn-primary">Save Slider</button>
           </div>
       </div>
    </div>
   </form>
   

<div class="container bg-white p-4 shadow-sm">
    <div class="row">
        <div class="col-md-12">
            <h1>Slider</h1>
        </div>
    </div>
    <div class="row">
    <div class="col-md-12">
<table class="table table-bordered">
  <thead>
    <tr>
        <th>Slider Image</th>
        <th>Slider Title</th>
        <th>slider_description </th>
        <th>slider_button_link</th>
        <th>Action</th>
    </tr>
  </thead>
  <thead>
    <% for(var i=0; i<slider.length; i ++) { %>
        <tr>
            <td><img src="/uploads/<%= slider[i].slider_image %>" alt="Slider Image" class="img-fluid" style="width:100px;"></td>
            <td><%= slider[i].slider_title %></td>
            <td><%= slider[i].slider_description%></td>
            <!-- <td><%= slider[i].slider_button_text %></td> -->
            <td><%= slider[i].slider_button_link %></td>
            <td>
                <a href="/admin/edit_slider/<%= slider[i].slider_id %>" class="btn btn-primary btn-sm me-1">Edit</a>
                <a href="/admin/delete_slider/<%= slider[i].slider_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this slider?');">Delete</a>

            </td>
        </tr>
        <% } %>
  </thead>
</table>
    </div>
</div>
</div>

