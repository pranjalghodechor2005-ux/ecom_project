<%- include('navbar.ejs') %>
<!-- Breadcrumbs -->
<section class="breadcrumb-section py-3 bg-light">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="profile.html">My Profile</a></li>
                <li class="breadcrumb-item active">My Orders</li>
            </ol>
        </nav>
    </div>
</section>

<!-- My Orders Section -->
<section class="my-orders-section py-5">
    <div class="container">
        <div class="row">
  <!-- Orders Content -->
  <div class="col-lg-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Orders</h2>
        <div class="d-flex align-items-center gap-3">
            <select class="form-select" style="width: auto;">
                <option value="all">All Orders</option>
                <option value="pending">Pending</option>
                <option value="processing">Processing</option>
                <option value="shipped">Shipped</option>
                <option value="delivered">Delivered</option>
                <option value="cancelled">Cancelled</option>
            </select>
        </div>
    </div>
    
    <!-- Order Cards -->
    <div class="row g-4">
        <!-- Order 1 -->
         <% for(var i=0; i<orders.length; i++){ %>
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">Order #<%- orders[i].order_id %></h6>
                        <small class="text-muted">Placed on <%- orders[i].order_date %></small>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-success"><%- orders[i].order_status %></span>
                        <div class="h6 mb-0 mt-1">&#8377;<%- orders[i].total_amount %></div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">

                            <% for (var j = 0; j < orders[i].products.length; j++) { %>
                            <div class="d-flex align-items-center mb-3">
                                <img src="/uploads/<%- orders[i].products[j].product_main_image %>" 
                                     class="cart-item-image me-3" alt="iPhone 15 Pro">
                                <div>
                                    <h6 class="mb-1"><%- orders[i].products[j].product_name %></h6>
                                    <small class="text-muted"><%- orders[i].products[j].product_color %> â€¢ <%- orders[i].products[j].variation_title %></small>
                                    <div class="text-primary">Qty: <%- orders[i].products[j].product_quantity%></div>
                                </div>
                            </div>
                        <% } %>
                        
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="mb-3">
                                <small class="text-muted">Delivered on <%- orders[i].deliver_date %></small>
                            </div>
                            <div class="d-grid gap-2">
                                <a href="profile-invoice.html" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-receipt me-1"></i>View Invoice
                                </a>
                                <button class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-arrow-clockwise me-1"></i>Reorder
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
        
    </div>
    
    <!-- Pagination -->
    <nav aria-label="Orders pagination" class="mt-5">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>

</div>
</div>
</div>
</section>

<%- include('footer.ejs') %>




